<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th>Nick</th>
      <th>Friendlyname</th>
      <th>Password</th>
      <th>Dob</th>
      <th>Dob fuzzed</th>
      <th>Gender</th>
      <th>Gender comment</th>
      <th>Deleted at</th>
      <th>Usertype</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.nick %></td>
        <td><%= user.friendlyname %></td>
        <td><%= user.password %></td>
        <td><%= user.dob %></td>
        <td><%= user.dob_fuzzed %></td>
        <td><%= user.gender %></td>
        <td><%= user.gender_comment %></td>
        <td><%= user.deleted_at %></td>
        <td><%= user.usertype %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

